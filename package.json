{
	"name": "hnn",
	"version": "0.0.0",
	"type": "module",
	"workspaces": [
		"./packages/web-client",
		"./packages/workers"
	],
	"scripts": {
		"build": "npm run web-client:build --workspace @hnn/web-client",
		"web-client:check": "npm run check --workspace @hnn/web-client",
		"web-client:tsc": "npm run tsc --workspace @hnn/web-client",
		"web-client:build": "npm run build --workspace @hnn/web-client",
		"web-client:build:static": "npm run build:static --workspace @hnn/web-client",
		"web-client:preview": "npm run preview --workspace @hnn/web-client",
		"web-client:preview:static": "npm run preview:static --workspace @hnn/web-client",
		"web-client:dev": "npm run dev --workspace @hnn/web-client",
		"web-client:test": "npm run test --workspace @hnn/web-client",
		"web-client:test:e2e": "npm run test:e2e --workspace @hnn/web-client",
		"web-client:sync": "npm run sync --workspace @hnn/web-client",
		"workers:dev": "npm run dev --workspace @hnn/workers-api",
		"workers:publish": "npm run publish --workspace @hnn/workers-api"
	},
	"devDependencies": {
		"@sveltejs/eslint-config": "github:sveltejs/eslint-config#v5.8.0",
		"@types/node": "^18.11.13",
		"@typescript-eslint/eslint-plugin": "5.46.1",
		"@typescript-eslint/parser": "5.46.1",
		"eslint": "8.29.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"prettier": "2.8.1",
		"prettier-plugin-tailwindcss": "0.2.1",
		"svelte": "3.54.0",
		"tslib": "2.4.1",
		"typescript": "4.9.4"
	}
}
