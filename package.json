{
	"name": "hot-or-not",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "npm run web-client:build",
		"web-client:build": "npm run --prefix ./packages/web-client build",
		"web-client:build:static": "npm run --prefix ./packages/web-client build:static",
		"web-client:preview": "npm run --prefix ./packages/web-client preview",
		"web-client:dev": "npm run --prefix ./packages/web-client dev",
		"workers:dev": "npm run --prefix ./src/workers dev",
		"workers:publish": "npm run --prefix ./src/workers publish",
		"postinstall": "find ./packages/* -maxdepth 2 -name package.json -execdir npm install \\;"
	},
	"devDependencies": {
		"@sveltejs/eslint-config": "github:sveltejs/eslint-config#v5.8.0",
		"@typescript-eslint/eslint-plugin": "5.36.2",
		"@typescript-eslint/parser": "5.36.2",
		"eslint": "8.23.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"prettier": "2.7.1",
		"prettier-plugin-tailwindcss": "0.1.13",
		"svelte": "3.50.0",
		"tslib": "2.4.0",
		"typescript": "4.8.3"
	}
}
