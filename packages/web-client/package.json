{
	"name": "hot-or-not-frontend",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npx playwright test",
		"build:static": "BUILD_MODE=static vite build",
		"preview:static": "BUILD_MODE=static vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json --ignore .svelte-kit,build --threshold warning --diagnostic-sources \"js,ts,svelte\"",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"tsc": "tsc -b",
		"sync": "svelte-kit sync",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"dependencies": {
		"@builder.io/partytown": "^0.7.1",
