{
	"canisters": {
		"backend": {
			"main": "packages/backend/main.mo",
			"type": "motoko",
			"declarations": {
				"output": "packages/frontend/declarations/backend"
			}
		},
		"frontend": {
			"dependencies": ["backend"],
			"frontend": {
				"entrypoint": "packages/frontend/build/index.html"
			},
			"source": ["packages/frontend/build"],
			"type": "assets"
		}
	},
	"defaults": {
		"build": {
			"packtool": ""
		}
	},
	"networks": {
		"local": {
			"bind": "127.0.0.1:8000",
			"type": "ephemeral"
		},
		"ic": {
			"providers": ["https://mainnet.dfinity.network"],
			"type": "persistent"
		}
	},
	"version": 1
}
